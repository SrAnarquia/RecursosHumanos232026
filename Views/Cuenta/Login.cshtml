@using RecursosHumanos.Models.ViewModels.Login
@model LoginViewModelscs

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutLogin";
}

<div class="container-fluid d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-3 login-card-main">
        <div class="card-header bg-primary text-white text-center py-3">
            <h4 class="mb-0"><i class="bi bi-person-circle me-2"></i>Iniciar Sesión</h4>
        </div>
        <div class="card-body p-4">
            <form asp-controller="Cuenta" asp-action="Login" method="post" id="loginForm">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly"
                     class="border-start border-3 border-danger ps-3 py-2 mb-3 text-danger small d-flex align-items-center gap-2">
                    <i class="bi bi-info-circle"></i>
                    <span>Verifique los datos ingresados</span>
                </div>

                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold">Usuario</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="Username" class="form-control" placeholder="Ingrese su usuario" />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ingrese su contraseña" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
                </div>

                <button type="submit" class="btn btn-primary w-100 fw-semibold">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Ingresar
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        const form = document.getElementById("loginForm");
        const btn = form.querySelector("button[type=submit]");
        const originalText = btn.innerHTML;

        form.addEventListener("submit", function (e) {

            // Si jQuery Validation existe y el form NO es válido → cancelar
            if (window.jQuery && $(form).data("validator") && !$(form).valid()) {
                e.preventDefault();
                btn.disabled = false;
                btn.innerHTML = originalText;
                return;
            }

            // Fallback HTML5
            if (!form.checkValidity()) {
                e.preventDefault();
                btn.disabled = false;
                btn.innerHTML = originalText;
                return;
            }

            // ✅ Formulario válido → dejar que haga POST
            btn.disabled = true;
            btn.innerHTML =
                '<span class="spinner-border spinner-border-sm"></span> Ingresando...';
        });

        // Cuando el servidor regresa con errores
        window.addEventListener("load", () => {
            const hasErrors =
                document.querySelectorAll(".field-validation-error").length > 0;

            if (hasErrors) {
                btn.disabled = false;
                btn.innerHTML = originalText;
            }
        });
    </script>

}

