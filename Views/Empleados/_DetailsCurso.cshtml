@model RecursosHumanos.Models.ViewModels.Empleados.CursoPersonaDetailsVM

<div id="cursoDetailsOverlay" class="reclutamiento-overlay show">

    <div class="reclutamiento-modal">

        <!-- HEADER -->
        <div class="modal-header">
            <h5><i class="bi bi-eye"></i> Detalles del curso</h5>
            <button type="button"
                    class="btn-close"
                    onclick="CursoOverlayDetails.close()">
            </button>
        </div>

        <!-- BODY -->
        <div class="modal-body">

            <div class="mb-3">
                <label class="fw-bold">Curso</label>
                <div class="form-control-plaintext">
                    @Model.NombreCurso
                </div>
            </div>

            <div class="mb-3">
                <label class="fw-bold">Descripción</label>
                <div class="form-control-plaintext">
                    @Model.Descripcion
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label class="fw-bold">Fecha inicio</label>
                    <div class="form-control-plaintext">
                        @Model.FechaInicio?.ToString("dd/MM/yyyy")
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="fw-bold">Fecha fin</label>
                    <div class="form-control-plaintext">
                        @Model.FechaFinalizacion?.ToString("dd/MM/yyyy")
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <label class="fw-bold">Estatus</label>
                <div class="form-control-plaintext">
                    <span class="badge bg-secondary">
                        @Model.Estatus
                    </span>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.Diploma))
            {
                <div class="mt-3">
                    <label class="fw-bold">Diploma</label>
                    <div>
                        <a href="@Model.Diploma"
                           target="_blank"
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-file-earmark-pdf"></i> Ver diploma
                        </a>
                    </div>
                </div>
            }

        </div>

        <!-- FOOTER -->
        <div class="modal-footer">
            <button type="button"
                    class="btn btn-secondary"
                    onclick="CursoOverlayDetails.close()">
                Cerrar
            </button>
        </div>

    </div>
</div>
