@model RecursosHumanos.Models.ViewModels.Empleados.PersonalIncidentesVM

@section Styles {
    <link href="~/css/styleReclutamiento.css" rel="stylesheet" />
    <link href="~/css/styleReclutamientoPartial.css" rel="stylesheet" />
}

@section Scripts {
    <script src="~/js/EmpleadoIncidenteOverlayCreate.js"></script>
    <script src="~/js/EmpleadoIncidenteOverlayDelete.js"></script>
    <partial name="_ValidationScriptsPartial" />
}

<!-- ===================== TÍTULO ===================== -->
<div class="mb-4">
    <a asp-action="Index"
       asp-controller="Empleados"
       class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left fs-4"></i>
    </a>

    <h2 class="fw-bold mb-0">
        Incidencias
    </h2>
</div>

<!-- ===================== CARD PERSONA ===================== -->
<div class="filter-card mb-4">
    <div class="d-flex align-items-center">

        @if (Model.FotoPersonal != null)
        {
            var base64 = Convert.ToBase64String(Model.FotoPersonal);
            <img src="data:image/jpeg;base64,@base64"
                 class="rounded-circle me-3"
                 style="width:70px;height:70px;object-fit:cover;" />
        }
        else
        {
            <i class="bi bi-person-circle fs-1 text-muted me-3"></i>
        }

        <div class="flex-grow-1">
            <h5 class="mb-0">@Model.Nombre</h5>
            <small class="text-muted">@Model.Departamento | @Model.TipoEmpleado</small><br />
            <small class="text-muted">@Model.Email | @Model.Telefono</small>
        </div>

        <button class="btn btn-danger"
                onclick="IncidenteOverlay.open(@Model.IdPersonal)">
            <i class="bi bi-plus-circle"></i> Agregar incidencia
        </button>
    </div>
</div>

<!-- ===================== FILTROS ===================== -->
<div class="filter-card mb-4">
    <form method="get" class="filters">

        <input type="text" name="nombreIncidente" placeholder="Incident"
               value="@Model.FiltroNombreIncidente" />

        <input type="date" name="FechaDesde"
               value="@(Model.FechaDesde?.ToString("yyyy-MM-dd"))" />

        <input type="date" name="FechaHasta"
               value="@(Model.FechaHasta?.ToString("yyyy-MM-dd"))" />

        <button class="btn btn-primary">
            <i class="bi bi-search"></i> Filtrar
        </button>

        <a asp-action="Incidentes"
           asp-route-id="@Model.IdPersonal"
           class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Limpiar
        </a>

    </form>
</div>

<div id="modalIncidenteContainer"></div>

<!-- ===================== TABLA ===================== -->
<div class="table-responsive">
    <table class="table table-hover table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Incidente</th>
                <th>Descripción</th>
                <th>Razón</th>
                <th>Fecha</th>
                <th class="text-center">Evidencia</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Incidentes.Any())
            {
                foreach (var i in Model.Incidentes)
                {
                    <tr>
                        <td>@i.NombreIncidente</td>
                        <td>@i.Descripcion</td>
                        <td>
                            <span class="badge bg-danger">@i.Razon</span>
                        </td>
                        <td>@i.FechaIncidente.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">
                            @if (!string.IsNullOrEmpty(i.Evidencia))
                            {
                                <a href="@i.Evidencia" target="_blank">Ver Evidencia</a>
                            }
                        </td>
                        <td class="text-center actions">

                            @* Eliminar (overlay futuro o confirm) *@
                            <a href="javascript:void(0)"
                               onclick="IncidenteOverlayDelete.open(@i.Id)"
                               title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>

                        </td>


                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        Sin incidencias registradas
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
